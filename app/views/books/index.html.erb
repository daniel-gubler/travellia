<h1>Listing books</h1>

<table>
<% @books.each do |book| %>
  <tr>
    <td><%= link_to book.name, book %></td>
    <% if admin_signed_in? %>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Book', new_book_path if admin_signed_in? %>
